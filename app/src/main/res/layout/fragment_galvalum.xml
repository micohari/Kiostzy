<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    tools:context=".galvalumFragment"
    tools:ignore="MissingDefaultResource">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galvalum Rombong"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Mini"
                android:textSize="20dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/fgalvalum"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="This boot is the newest booth of our product with an attractive design, simple and affordable price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INCLUDE"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:background="@drawable/inclune">
                <ImageButton
                    android:id="@+id/Wgalvalum"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="58dp"
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:background="@drawable/buy"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>